

<div class="container text-center">
  <div class="search-bar">
    <h1><%= form_tag projects_path, :method => 'get' do %>
  <p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Go", :name => nil %>
  </p>
<% end %></h1>
  </div>

  <% @projects.each do |project|%>
  <%= link_to project_path(project) do  %>
    <div class="projects-card" style="background-image: linear-gradient(-45deg, rgba(0,0,0,0.6), rgba(0,0,0,0.9))">
      <div class="flex-left">
        <div class="project-details">
          <h1><%= project.name %></h1>
          <p class="last-updated"><%= project.updated_at %></p>
          <% if project.open %>
            <div class="status-o">
              <div class="w-circle"> </div>
              <p class="open">OPEN</p>
            </div>
          <% else %>
            <div class="status-c">
              <div class="w-circle"> </div>
              <p class="closed">CLOSED</p>
            </div>
          <% end %>
        </div>
        <div class="tags">
        <% project.technologies.each do |technology| %>
          <span class="tag <%= technology.name.downcase %>-tag"><%= technology.name%></span>
        <% end %>
        </div>
      </div>
      <div class="flex-right">
        <div class="avatar-card">
          <% if  User.find(project.user_id).photo.present?%>
            <%= cl_image_tag  User.find(project.user_id).photo, class: 'avi-detail'  %>
          <% else %>
            <div class="avi-detail" style="background-image: url('https://www.vccircle.com/wp-content/uploads/2017/03/default-profile.png?w=300');">
          <% end %>
          </div>
        </div>
        <div class="progress"></div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>


