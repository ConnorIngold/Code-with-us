<%= simple_form_for @project do |f| %>
  <%= f.input :name %>
  <%= f.input :aim %>
  <%= f.input :category %>
  <%= f.simple_fields_for :tech_project do |t|%>
    <%= t.input :technologies, collection: @technologies, as: :check_boxes %>
  <% end %>
  <%= f.input :image %>
<%= f.button :submit, class: "btn btn-success" %>
<% end %>

<br>
<br>
<br>

<% @project.project_invites.each do |invite| %>
  <%= invite.user.email %>
  <%= invite.message %>
  <%= invite.status %>
  <%= link_to "accept", accept_path(invite), class: "btn btn-success accept-button" %>
  <%= link_to "decline", decline_path(invite),  class: "btn btn-danger decline" %>
<% end %>
