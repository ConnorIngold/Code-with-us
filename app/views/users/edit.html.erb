<div class="container">
  <div class="edit user form">
    <h1>Edit Profile</h1>

    <%= simple_form_for(@user) do |f| %>
      <%= f.input :full_name %>
      <%= f.input :description %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden  %>
        <%= f.simple_fields_for :tech_project do |t|%>
          <%= t.input :technologies, collection: @technologies, as: :check_boxes %>
        <% end %>
      <%= f.button :submit, "Edit"%>
    <% end %>

  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form-user">
        <h1>Edit Profile</h1>
        <%= simple_form_for(@user) do |f| %>
        <div class="row">
          <div class="col-xs-12">
            <%= f.input :full_name, placeholder: "Full Name" %>
          </div>
          <div class="col-xs-12">
            <%= f.input :description, placeholder: 'Describe yourself...' %>
          </div>
        </div>
          <div class="form-group">
            <label class="control-label check_boxes optional">Technologies</label>
            <input type="hidden" name="post[technology_ids][]" value="">
            <div class="technology-choices">
              <% @technologies.each do |technology| %>
              <div class="technology-choice">
                <input type="checkbox" class="hidden" value="<%= technology.id %>" name="post[technology_ids][]" id="post_technology_ids_<%= technology.id %>">
                <label for="post_technology_ids_<%= technology.id %>">
                  <%= technology.name %>
                  <i class="fa fa-check"></i>
                </label>
              </div>
              <% end %>
             </div>
          </div>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden  %>
          <%= f.submit "Save", class: "btn btn-primary"  %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $(".technology-choice").click(function(){
      $(this).toggleClass("active");
    });
  });
</script>



