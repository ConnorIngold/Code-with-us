<div class="profile-page">
<h1 class="name text-center"><%= @user.full_name %></h1>

  <div class="profile-grid">

    <div class="photo-grid-item-1">
      <div class="show-white-card text-center">
        <div class="card-show-header">
           <h4><%= @user.full_name %></h4>
        </div>
        <% if @user.photo.present? %>
          <div class="avatar-large text-center" style="background-image: url('<%= cl_image_path @user.photo %>');">
        <% else %>
          <div class="avatar-large" style="background-image: url('https://www.vccircle.com/wp-content/uploads/2017/03/default-profile.png?w=300')">
          <% end %>
        </div>
      </div>
    </div>

    <div class="description-grid-item-2">
      <div class="description">
        <h2>This is the user description </h2>
          <p><%= @user.description %></p>
      </div>
    </div>

    <div class="follow-me-grid-item-3">
      <div class="description">
          <h3>Find me on</h3>
          <a class="btn github-link" href= <%= @user.github %> ><i class="fa fa-github"></i>
            GitHub
          </a>
          <a class="btn facebook-link" href= <%= @user.facebook %> ><i class="fa fa-facebook" aria-hidden="true"></i>
            Facebook
          </a>
          <a class="btn twitter-link" href= <%= @user.twitter %> ><i class="fa fa-twitter" aria-hidden="true"></i>
            Twitter
          </a>
          <a  class="btn linkedin-link" href= <%= @user.linkedin %> ><i class="fa fa-linkedin" aria-hidden="true"></i>
            LinkedIn
          </a>
      </div>
    </div>

    <div class="list-projects-grid-item-4">
      <div class="show-white-card text-center">
        <div class="card-show-header">
          <p>List projects you are the Admin</p>
            <% @user.my_projects.each do |project| %>
              <%= link_to project.name, project_path(project) %>
            <% end %>

          <p>List project they are member of</p>
            <% @projects.each do |project| %>
              <% if project.users.merge(ProjectInvite.accepted_users).include?(@user) %>
                <%= link_to project.name, project_path(project) %>
              <% end %>
            <% end %>
        </div>
      </div>
    </div>

    <div class="dashboard-grid-item-5">
      <div class="show-white-card text-center">
        <div class="card-show-header">
          <h4>Current Projects | Completed Projects </h4>
        </div>
        <div class="dashboard-card">
          <p>Overall data</p>
        </div>
      </div>
    </div>

    <div class="technologies-grid-item-6">
      <div class="show-white-card text-center">
        <div class="card-show-header">
          <h4>User technologies</h4>
        </div>

          <div class="tags">
            <% @user.technologies.each do |technology| %>
              <%= cl_image_tag technology.photo, :style => "height:30px;width:30px;" %>
            <% end %>
          </div>
      </div>
    </div>

    <div class="projects-card-grid-item-7">
      <div class="show-white-card text-center">
        <div class="card-show-header">
          <h4>Projects</h4>
        </div>
      </div>
      <div class="cards-profile">
        <% @projects.each do |project| %>
          <% if project.users.include?(current_user) || project.owner == current_user %>
            <%= link_to project_path(project) do  %>
             <div class="projects-card-show" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.9) 50%), url('<%= cl_image_path project.image if project.image.present? %>');">
              <div class="flex-left">
                <div class="project-details">
                  <h1><%= truncate(project.name) %></h1>
                  <p class="last-updated"><%= project.updated_at %></p>

                  <% if project.open %>
                    <div class="status-o">
                      <div class="w-circle"> </div>
                      <p class="open">OPEN</p>
                    </div>
                  <% else %>
                    <div class="status-c">
                      <div class="w-circle"> </div>
                      <p class="closed">CLOSED</p>
                    </div>
                  <% end %>
                </div>

                <div class="tags">
                  <% project.technologies.each do |technology| %>
                    <%= cl_image_tag "#{technology.photo}", :style => "height:50px;width:50px;" %>
                  <% end %>
                </div>
              </div>

              <div class="flex-right">
                <div class="avatar-card">
                  <% if  User.find(project.user_id).photo.present?%>
                    <%= cl_image_tag  User.find(project.user_id).photo, class: 'avi-detail'  %>
                  <% else %>
                    <div class="avi-detail" style="background-image: url('https://www.vccircle.com/wp-content/uploads/2017/03/default-profile.png?w=300');">
                    </div>
                  <% end %>
                </div>
                <div class="progress"></div>
              </div>
            </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="settings-grid-item-8">
      <div class="show-white-card text-center">
        <div class="show-white-card text-center">
          <div class="card-show-header">
            <h4>Settings</h4>
          </div>
          <div class="card-show-body">
          <div class="edit-link">
            <%= link_to "Edit Profile", edit_user_path(@user) %>
          </div>
            <p>Edit projects and Project requests</p>
            <% if @user == current_user %>
            <%= link_to "Edit your requests", project_invites_path %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>



<% if @user == current_user %>
<%= link_to "Edit your requests", project_invites_path %>
<% end %>

