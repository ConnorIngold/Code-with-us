<div class="profile-page">
<h1 class="name">User.name profile</h1>

  <div class="profile-grid">

    <div class="photo-grid-item-1">
       <div class="show-white-card text-center">
         <div class="card-show-header">
           <h4>user.name</h4>
           </div>
            <h4>user.photo</h4>
           </div>
          </div>
       </div>
    </div>


    <div class="edit-link">
      <%= link_to "Edit", edit_user_path(@user) %>
    </div>

    <div class="description-grid-item-2">
      <div class="description">
        <h2>This is the user description </h2>
          <h3> Hello My I am a coder </h3>
          <p>user.description</p>
      </div>
    </div>


    <div class="tech-grid-item-3">
      <div class="show-white-card">
        <div class="card-show-header">
          <h4>Technologies used</h4>
        </div>
        <div class="card-show-body">
          <p>Ruby</p>
          <p>HTML</p>
          <p>CSS</p>
          <p>Javascript</p>
        </div>
      </div>
    </div>


    <div class="dashboard-grid-item-4">
      <div class="show-white-card">
        <div class="card-show-header">
          <p>Current Projects</p>
          <p>Completed Projects</p>
        </div>
        <div class="dashboard-card">
          <h4>Dashboard</h4>
        </div>
      </div>
    </div>


    <div class="settings-grid-item-5">
      <div class="show-white-card text-center">
        <div class="card-show-header">
          <h4>I use...</h4>
        </div>
        <div class="card-show-body">
          <h4>Git-hub</h4>
        </div>
      </div>
    </div>


    <div class="projects-grid-item-6">
      <div class="container text-center">
        <div class="profile-project-card">
          <div class="flex-left">
            <div class="project-details"></div>
            <div class="tags"></div>
          </div>
          <div class="flex-right">
            <div class="avater-card"></div>
            <div class="progress"></div>
          </div>
        </div>
      </div>
     </div>

  </div>
</div>

